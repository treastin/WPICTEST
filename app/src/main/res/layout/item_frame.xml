<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_frame__img__frame_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/img1"/>

    <ImageButton
        android:id="@+id/item_frame__img__unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/item_frame__img__frame_image"
        android:layout_alignTop="@id/item_frame__img__frame_image"
        android:background="@android:color/transparent"
        android:src="@drawable/premium"
        tools:visibility="visible"
        android:visibility="gone" />

</RelativeLayout>